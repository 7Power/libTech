root {
	panel x = 10 y = 10 width = 160 height = 100 {
		button text = "New Game" script = [[ OnNewGame() ]];
		button text = "Quit" script = [[ OnQuit() ]];
	}

	window title = "Console" x = 500 y = 250 width = 600 height = 400 movable resizable closable noscrollbar nolayout {
		layout dynamic height = [[
			--print(Window)
			return Window.H - 85
		]] {
			input editor readonly;
		}

		layout dynamic {
			input field;
		}
	}
}